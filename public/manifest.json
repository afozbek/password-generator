{
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {},
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "./options.html",
  "permissions": ["tabs"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/css/root.css"],
      "js": ["./content.js"]
    }
  ]
}
